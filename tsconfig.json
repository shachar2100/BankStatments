{
  "compilerOptions": {
    "target": "ES2022",                      // Modern JS features
    "module": "CommonJS",                    // Node.js compatibility
    "rootDir": "./",                      // Your source TypeScript files
    "outDir": "./dist",                      // Where compiled JS files go
    "esModuleInterop": true,                 // Support for commonjs ES6 interop
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          // Enable all strict type-checking options
    "skipLibCheck": true                     // Faster builds by skipping type checks on .d.ts
  },
  "include": ["src", "tests", "src/index.ts", "data/previndex.ts"],              // Include both code and tests
  "exclude": ["node_modules", "dist"]       // Ignore output and dependencies
}
